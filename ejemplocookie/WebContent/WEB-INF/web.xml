<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>ejemplocookie</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>servletindex</servlet-name>
		<servlet-class>servlets.servletcookie</servlet-class>


	</servlet>
	<servlet>
		<servlet-name>contadorservlets</servlet-name>
		<servlet-class>servlets.contadorservlet</servlet-class>

	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>contadorservlets</servlet-name>
		<url-pattern>/contadorservlets</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>servletindex</servlet-name>
		<url-pattern>/servletindex</url-pattern>
	</servlet-mapping>
</web-app>